{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": [
            "vite/client"
        ],
        "allowJs": true,
        "outDir": "./public/build/assets",
        "declaration": true,
        "emitDeclarationOnly": false
    },
    "include": [
        "resources/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
